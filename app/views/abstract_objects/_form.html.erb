<% url = @abstract_object.new_record? ? 
  abstracts_path(connection_id: @db_connect.id, name: @name) 
: 
  abstract_path(id: @abstract_object.id, connection_id: @db_connect.id, name: @name)%>

<%= simple_form_for @abstract_object, :as => "abstract_object", :url=> url, :html => { :class => 'form-horizontal' } do |f| %>
  <%= @schema.get_table_attributes(@name).each do |attr| %>
    <%= f.input attr, disabled: attr == "id" %>
  <% end %>
  <div class = "form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>

    </div>
<% end %>
